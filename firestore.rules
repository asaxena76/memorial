rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    function isApproved() {
      return request.auth != null && request.auth.token.approved == true;
    }

    match /users/{uid} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
      allow list: if isAdmin();
      allow create: if false;
      allow update, delete: if isAdmin();
    }

    match /posts/{postId} {
      allow read: if resource.data.status == "approved"
        || isAdmin()
        || (isSignedIn() && resource.data.createdBy == request.auth.uid);

      allow create: if isApproved()
        && request.resource.data.status == "pending"
        && request.resource.data.createdBy == request.auth.uid
        && !("reviewedAt" in request.resource.data)
        && !("reviewedBy" in request.resource.data)
        && !("rejectedReason" in request.resource.data);

      allow update: if isAdmin()
        || (isApproved()
          && resource.data.createdBy == request.auth.uid
          && request.resource.data.createdBy == request.auth.uid
          && (
            // Owner edits while still pending.
            (resource.data.status == "pending"
              && request.resource.data.status == "pending"
              && request.resource.data.diff(resource.data).changedKeys().hasOnly([
                "caption",
                "updatedAt"
              ]))
            // Owner edits an approved post, which reverts it to pending review.
            || (resource.data.status == "approved"
              && request.resource.data.status == "pending"
              && !("reviewedAt" in request.resource.data)
              && !("reviewedBy" in request.resource.data)
              && !("rejectedReason" in request.resource.data)
              && request.resource.data.diff(resource.data).changedKeys().hasOnly([
                "caption",
                "status",
                "updatedAt",
                "reviewedAt",
                "reviewedBy",
                "rejectedReason"
              ]))
          ));

      allow delete: if isAdmin();
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /auditLogs/{id} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
